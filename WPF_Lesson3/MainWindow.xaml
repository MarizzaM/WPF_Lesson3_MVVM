<Window x:Class="WPF_Lesson3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lesson3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label 
            x:Name="nameLbl"
            Content="{Binding MyPerson.Name}"
            Margin="0 50 0 0"
            FontSize="36"
            HorizontalAlignment="Center"
            />
        <!-- change number to person age -->
        <TextBlock 
            x:Name="txt1"
            Text="{Binding  MyPerson.Age}"
            Margin="0 50 0 0"
            FontSize="36"
            HorizontalAlignment="Center"
            />
        <Button 
        x:Name="changeBtn"
            Content="Change!"
            Margin="0 50 0 0"
            FontSize="36"
            HorizontalAlignment="Center" Click="changeBtn_Click"
            
            />
    </StackPanel>

</Window>
